/*******************************
         Theme Overrides
*******************************/
@font-face {
  font-family: 'Accordion';
  src:
    url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype'),
    url(data:application/font-woff;charset=utf-8;base64,) format('woff')
  ;
  font-weight: normal;
  font-style: normal;
}

/* Dropdown Icon */
.ui.accordion .title .dropdown.icon,
.ui.accordion .accordion .title .dropdown.icon {
  font-family: Accordion;
  line-height: 1;
  backface-visibility: hidden;
  font-weight: normal;
  font-style: normal;
  text-align: center;
}

.ui.accordion .title .dropdown.icon:before,
.ui.accordion .accordion .title .dropdown.icon:before {
  content: '\f0da'/*rtl:'\f0d9'*/;
}


/*******************************
		  Custom for NS V.2
*******************************/
/* Accordion Title */
.ui.accordion{
	.title:not(.ui){
		margin:0;
		position:relative;
		padding-right:30px;
		font-weight:700;
	}
}

/* Dropdown Icon */
.ui.accordion:not(.styled),
.ui.accordion .accordion:not(.styled){
	.title{
		.ns-chevron-down.icon {
			margin:0;
			height:@21px;
			color:@primary-one;
			line-height:@21px;
			position:absolute;
			right:0;
			top:50%;
			margin-top:-.75rem;
		}
		&.active{
			.ns-chevron-down.icon{
				transform:rotate(180deg);
			}
		}
	}
	//	FAQ UI
	&.splitted{
		.title{
			font-size:@18px;
			color:@fullBlack;
			padding:@14px @40px @14px @20px;
			background-color:@white;
			box-shadow:@noTopShadow;
			border-bottom:@border-light 1px solid;
			position:relative;
			overflow:hidden;
			&:first-of-type{
				box-shadow:@allSideShadow;
				border-radius:@6px @6px 0 0;
			}
			&:nth-last-child(2){
				border-radius:0 0 @6px @6px;
			}
			>.icon{
				font-size:@14px;
				color:@link-color;
				right:10px;
			}
			~ .content:not(.ui){
				padding:@20px @20px @30px;
				&.active + .title{
					border-top-left-radius:@6px;
					border-top-right-radius:@6px;
					box-shadow:@allSideShadow;
				}
			}
			&.active{
				border-bottom-right-radius:@6px;
				border-bottom-left-radius:@6px;
				&:before{
					content:"";
					width:6px;
					position:absolute;
					left:0;
					top:0;
					bottom:0;
					background-color:@primary-one;
				}
			}
		}
		.list a.item{
			color:@fullBlack;
			&:hover, &:focus, &.active{
				color:@link-color;
			}
		}
	}
}
.ui.styled.accordion, .ui.styled.accordion .accordion{
	//	Edgar Filing List UI
	&.filing-list{
		background:none;
		box-shadow:none;
		> div{
			margin-bottom:1rem;
			background-color:@white;
		}
		.title{
			border:@borderColor 1px solid;
			&.active{
				background-color:#F8F8F8;
			}
			time{
				font-size:@12px;
				margin-left:@5px;
				color:@tertiary-text;
			}
		}
		.content{
			padding:1em;
			&.active{
				border:@borderColor 1px solid;
				border-top:none;
			}
		}
		.actions{
			position:relative;
			float:right;
			z-index:99;
			a, .ui.button, .ui.buttons .button{
				font-family:@pageFont;
				font-size:@13px;
				font-weight:400;
				text-transform:none;
				margin:0;
				padding:0 @8px;
				border-right:@borderColor 1px solid;
				&:last-child{
					border:none;
					padding-right:0;
				}
			}
		}
		a{
			&:hover, &:focus, &:active{
				text-decoration:none;
			}
		}
	}
	&.card-style{
		border-radius:@6px;
		box-shadow:0 0 10px rgba(0,0,0,.1);
		&:not(:last-child){
			margin-bottom:@35px;
		}
		.title{
			font-weight:700;
			color:@fullBlack;
			&.active{
				border-bottom:@border-light 1px solid;
			}
			> .icon{
				margin-right:@14px;
				color:@link-color;
			}
		}
		.content{
			padding:0;
		}
	}
}

//	Knowledge Base UI
.ui.accordion.feed-view{
	.title{
		padding:@12px 0;
		font-weight:400;
		color:@neutral-middark;
		border-top:@border-light 1px solid;
		&:first-of-type{
			border:none;
		}
		>span{
			display:block;
			color:@fullBlack;
		}
		&.active > span{
			color:@link-color;
		}
	}
}
