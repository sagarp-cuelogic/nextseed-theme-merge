/*******************************
         Theme Overrides
*******************************/
.horizontal-items {
	&.ui.items {
		display: flex;
		flex-wrap: wrap;
		margin-left: -@14px;
		margin-right: -@14px;
		>.item {
			width: 50%;
			margin-top: 0;
			margin-bottom: 20px;
			padding-left: @14px;
			padding-right: @14px;
			.ui.mini.image {
				width: 45px;
				+.content {
					padding-left: 10px;
				}
			}
			.meta {
				line-height: 24px;
				margin: 0;
			}
		}
	}
}