/*******************************
         Theme Overrides
*******************************/
//  Public page Starts
.campaign{
    .ui.horizontal.list>.item{
        font-size:@12px;
        font-weight:@bold;
        color:@primary-one;
        &:hover{
            text-decoration:underline;
        }
    }
}
//  Public page Ends

.filter-meta{
    .ui.horizontal.list{
        .item{
            font-size:@12px;
            color:@white;
        }
        a.item{
            color:@neutral-offdark;
            &:hover, &:focus, &.active{
                color:@primary-one;
            }
        }
    }
}
.secondary-menu{
	.ui.horizontal.celled.list{
        a.item{
            font-size:@14px;
            font-weight:900;
            padding:@16px @20px !important;
            border-left:@tertiary-text 1px solid;
            color:@white;
            &:hover, &:focus, &.active{
                color:@link-color !important;
                background-color:@neutral-offwhite;
            }
        }
	}
}

.tabular-wrap .ui.segment{
    .ui.horizontal.list.link{
        margin-bottom:@28px;
        .item{
            color:@tertiary-text;
            border-bottom:2px solid transparent;
            &:hover, &:focus, &.active{
                color:@neutral;
                border-color:@primary-one;
            }
        }
    }
}

.page-header-section{
    .ui.list{
        &.horizontal{
            margin-left:@14px;
            vertical-align:middle;
        }
        .item{
            padding:0;
            font-size:@14px;
        }
        .list>.item .description, >.item .description{
            color:@white;
        }
        i.circular.icon{
            &.red{
                box-shadow:0 0 0 0.1em @red;
            }
            &.green{
                box-shadow:0 0 0 0.1em @green;
            }
        }
    }
}

.update-list{
	background-color:@neutral-offwhite;
    .ui.list{
        margin-left:@5px;
        border-left:@border-color 1px solid;
        .item{
            padding-left:@21px;
            font-size:@13px;
            font-weight:700;
            line-height:@16px;
            color:@neutral-middark;
            position:relative;
            &:before{
                content:"";
                width:9px;
                height:9px;
                border-radius:@5px;
                background-color:@neutral-middark;
                position:absolute;
                left:-1px;
                top:50%;
                z-index:2;
                transform:translate(-50%, -50%);
                border:2px solid white;
                box-shadow:0px 0px 4px 1px @neutral-middark;
            }
            &:hover, &.active{
                color:@neutral;
                &:before{
                    background-color:@link-color;
                    box-shadow:0 0 4px 1px @link-color;
                }
            }
            &:first-child:after, &:last-child:after{
                height:50%;
                width:1px;
                visibility:visible;
                position:absolute;
                left:-1px;
                z-index:1;
                background-color:@neutral-offwhite;
            }
            &:first-child{
                &:before{
                    top:~"calc(50% - 6px)";
                }
                &:after{
                    top:0;
                }
            }
            &:last-child{
                &:before{
                    top:~"calc(50% + 6px)";
                }
                &:after{
                    bottom:0;
                }
            }
        }
    }
}

.ui.list.horizontal.feature-list{
    margin:@30px 0;
    > .item{
        font-weight:700;
        text-align:center;
        margin-left:@70px;
        .icon{
            display:block;
            padding:0;
            margin:0 auto @10px;
            color:@primary-one;
        }
    }
}

//  Used for message section
.ui.card.messages{
    flex-direction:row;
    max-height:~"calc(100vh - 232px)";
    .ui.list{
        width:30%;
        margin:0;
        overflow:auto;
        border-radius:@6px 0 0 @6px !important;
        border-right:@borderColor 1px solid;
        >.item{
            padding:@12px;
            position:relative;
            .header{
                font-weight:700;
                color:@fullBlack;
            }
            h4.header{
                font-size:@16px;
            }
            .extra{
                font-size:@13px;
                color:@neutral-offdark;
                position:absolute;
                right:12px;
            }
        }
        .content{
            + .content{
                padding-top:@7px;
            }
            .description{
                margin-top:@5px;
            }
        }
    }
}
